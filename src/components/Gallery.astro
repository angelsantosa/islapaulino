<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>

<div id="gallery" class="flex gap-2 flex-nowrap flex-1 overflow-x-auto">
  {
    galleryItems.map((item) => (
      <a
        data-pswp-width={item.width}
        data-pswp-height={item.height}
        href={item.src}
        class="border-4 border-paupink shrink-0"
      >
        <img
          src={item.thumbnail}
          alt={item.alt}
          class="aspect-square"
          width="50"
          height="50"
        />
